{
  "compilerOptions": {
      "jsx": "react",
      "target": "ESNext",
      "module": "commonjs",
      "forceConsistentCasingInFileNames": true,
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "strict": true,
      "baseUrl": ".",
      "paths": {
          "@/*": ["./src/*"],
          "@components/*": ["./src/components/*"],
      },
      "outDir": "dist",
      "moduleResolution": "node",
      "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
