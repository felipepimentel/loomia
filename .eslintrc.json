{
    "root": true,
    "ignorePatterns": ["node_modules", "dist", "tmp"],
    "plugins": ["@nx/nx"],
    "overrides": [
      {
        "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
        "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
        "rules": {
          "@typescript-eslint/explicit-function-return-type": "off",
          "@typescript-eslint/no-explicit-any": "off"
        }
      },
      {
        "files": ["*.js", "*.jsx"],
        "rules": {}
      }
    ]
  }
