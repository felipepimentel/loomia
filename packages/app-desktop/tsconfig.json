{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ES6", "DOM"],
    "rootDir": "src",
    "strict": true,
    "paths": {
      "@renderer/*": ["../renderer/src/*"],
      "@plugin-manager/*": ["../plugin-manager/src/*"],
      "@commons/*": ["../commons/src/*"],
      "@events/*": ["../events/src/*"],
      "@config/*": ["../config/src/*"],
      "@app-desktop/*": ["../app-desktop/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
